<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login - HIMAFIN</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="login-container page-fade">
    <div class="decorative-shapes">
      <div class="shape shape-1"></div>
      <div class="shape shape-2"></div>
      <div class="shape shape-3"></div>
      <div class="shape shape-4"></div>
    </div>
    
    <div class="login-card">
      <div class="logo-container">
        <div class="logo-icon">
          <i class="bi bi-wallet2"></i>
        </div>
        <div class="logo-text">HIMAFIN</div>
        <p class="logo-subtitle">HIMATEKOM Financial & Inventory System</p>
      </div>
      
      <form id="loginForm">
        <div class="mb-3">
          <label for="nim" class="form-label"><i class="bi bi-person-badge me-2"></i>NIM</label>
          <input type="text" class="form-control" id="nim" name="nim" placeholder="Masukkan NIM" required>
        </div>
        
        <div class="mb-4">
          <label for="username" class="form-label"><i class="bi bi-person me-2"></i>Username</label>
          <input type="text" class="form-control" id="username" name="username" placeholder="Masukkan Username" required>
        </div>
        
        <div class="d-grid">
          <button type="submit" class="btn btn-primary btn-lg">
            <i class="bi bi-box-arrow-in-right me-2"></i>Masuk
          </button>
        </div>
      </form>
      
      <div class="login-footer">
        <small>Tidak bisa login? <a href="javascript:void(0)" onclick="alert('Hubungi admin HIMATEKOM untuk bantuan login')">Hubungi admin</a></small>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/theme.js"></script>
  <script>
    document.getElementById('loginForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const nim = document.getElementById('nim').value;
      const username = document.getElementById('username').value;
      const submitBtn = e.target.querySelector('button[type="submit"]');
      const originalText = submitBtn.innerHTML;
      
      submitBtn.disabled = true;
      submitBtn.innerHTML = '<span class="loading"></span> Memproses...';
      
      try {
        const response = await fetch('/login', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ nim, username })
        });
        
        const data = await response.json();
        
        if (data.success) {
          submitBtn.innerHTML = '<i class="bi bi-check-circle me-2"></i>Berhasil!';
          setTimeout(() => {
            window.location.href = data.redirect;
          }, 500);
        } else {
          alert(data.message);
          submitBtn.disabled = false;
          submitBtn.innerHTML = originalText;
        }
      } catch (error) {
        alert('Terjadi kesalahan sistem');
        submitBtn.disabled = false;
        submitBtn.innerHTML = originalText;
      }
    });
  </script>
</body>
</html>
